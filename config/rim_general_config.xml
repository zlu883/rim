<!-- General configurations for RIM -->
<generalConfig>

	<!-- Port number of the RIM server which receives requests from application -->
	<RIMserverPortNumber>33333</RIMserverPortNumber>
	
	<!-- IP address and port of the RM server which takes RIM output commands, depends on RM configuration -->
	<RMserverAddress>ws://localhost:10000</RMserverAddress>

	<!-- The reaction generation scheme, either RANDOM or WEIGHTED -->
	<reactionGenerationScheme>WEIGHTED</reactionGenerationScheme>

	<!-- The motion generation scheme, either RANDOM or WEIGHTED -->
	<motionGenerationScheme>WEIGHTED</motionGenerationScheme>
	
</generalConfig>